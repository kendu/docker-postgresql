#################################---FROM---#####################################

FROM postgres:9.5

################################################################################

#################################---ENV---######################################

ENV DEBIAN_FRONTEND noninteractive

################################################################################

#################################---INFO---#####################################

MAINTAINER Kendu <devops@kendu.si>

################################################################################

################################---BUILD---#####################################

RUN apt-get update && \
    apt-get upgrade --yes
RUN apt-get install --yes \
    python-pip \
    libpq-dev \
    python-dev \
    python-psycopg2; \
    pip install -U pip wcwidth setuptools pgcli

